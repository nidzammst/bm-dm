// This file is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminAccount {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  @@map("admin_accounts")
}

model Member {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  updatedAt    DateTime      @updatedAt
  balance      Int           @default(0)
  transactions Transaction[] @relation("MemberTransactions")
  transferring Transaction[] @relation("TransferringTransactions")
  receiving    Transaction[] @relation("ReceivingTransactions")

  @@map("members")
}

model Transaction {
  id          String          @id @default(uuid())
  amount      Int
  type        TransactionType
  description String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now())

  balanceBefore         Int
  balanceAfter          Int
  receiverBalanceBefore Int?
  receiverBalanceAfter  Int?

  admin   AdminAccount @relation(fields: [adminId], references: [id])
  adminId String

  member   Member @relation("MemberTransactions", fields: [memberId], references: [id])
  memberId String

  transferring   Member? @relation("TransferringTransactions", fields: [transferringId], references: [id])
  transferringId String?

  receiving   Member? @relation("ReceivingTransactions", fields: [receivingId], references: [id])
  receivingId String?

  @@map("transactions")
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  TRANSFER
}
